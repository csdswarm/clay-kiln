{
  "name": "clay-radio",
  "version": "1.0.0",
  "description": "A repo that contains a basic site and the necessary files to provision AWS resources for hosting the site.",
  "dependencies": {
    "lodash": "^4.17.19",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "yamljs": "^0.3.0"
  },
  "scripts": {
    "lint:app:js": "npm run eslint --prefix app",
    "lint:spa:js": "npm run lint --prefix spa -- --no-fix"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/entercom/clay-radio.git"
  },
  "author": "",
  "license": "MIT",
  "homepage": "https://bitbucket.org/entercom/clay-radio#readme",
  "lint-staged": {
    "app/**/*.js": [
      "npm run --silent lint:app:js"
    ],
    "spa/**/*.{js,vue}": [
      "npm run --silent lint:spa:js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
