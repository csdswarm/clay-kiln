<div class="component-content-card content-card content-card--event">
  {{> content-card-thumb _self=true }}
  <div class="content-card__info-container">
    <div class="content-card__info-headline">{{ headline }}</div>
    <div class="content-card__info-dateTime">
      <div class="content-card__info-icon content-card__info-icon--date"></div>
      <div class="content-card__info-dateTime-text">{{ dateTime }}</div>
    </div>
    <div class="content-card__info-venueName">
      <div class="content-card__info-icon content-card__info-icon--location"></div>
      <div class="content-card__info-venueName-text">{{ venueName }}</div>
    </div>
  </div>
</div>