{{#ifAny @root.locals.edit giphyUrlValid}}
<figure data-uri="{{ default _ref _self }}" class="giphy" data-editable="url">
  {{#unless giphyUrlValid}}
    <div data-placeholder="giphyUrlValid"></div>
  {{/unless}}

  {{#ifAll url giphyUrlValid}}
    {{#unless @root.locals.edit}}
