<div class='component component--stations-carousel{{#ifAny sectionFront sectionFrontManual}} stations-carousel--{{ default sectionFrontManual sectionFront }}{{/ifAny}}{{#ifAny genre genreManual}} stations-carousel--{{ default genreManual genre }}{{/ifAny}}' data-uri='{{ default _ref _self }}' data-editable='settings' {{#ifAny genre genreManual}} data-genre-track='{{ default genreManual genre }}'{{/ifAny}}{{#ifAny sectionFront sectionFrontManual}} data-section-front-track='{{ default sectionFrontManual sectionFront }}'{{/ifAny}} data-filter-stations-by-track='{{filterStationsBy}}'>
  <div class='stations-carousel__arrow stations-carousel__arrow--left' data-direction='left'>
    {{#ifAny (compare sectionFront 'news') (compare sectionFrontManual 'news')}}
      {{{ read 'components/stations-carousel/media/arrow_news.svg' }}}
    {{else}}
      {{{ read 'components/stations-carousel/media/arrow.svg' }}}
    {{/ifAny}}
  </div>
  <div class='stations-carousel__carousel'>
    <div class='carousel__title'>
      <div class='title__line'></div>
      <h2>{{title}}</h2>
    </div>
    <ul>
      <li class="loader-container">
        {{{ read 'components/stations-carousel/media/radiocom-monogram-loader.svg' }}}
        <div class="thumb"></div>
      </li>
      {{#unless @root.locals.edit }}
        {{#each customItems}}
          <li class="curated-item">
            <a class="station-card" href="{{ url }}">
              <div class="station__lede">
                <img class="thumb" src="{{ image }}">
              </div>
              <span class="name">{{ name }}</span>
            </a>
          </li>
        {{/each}}
      {{/unless}}
    </ul>
    <div class='carousel__pagination-dots'></div>
  </div>
  <div class='stations-carousel__arrow stations-carousel__arrow--right' data-direction='right'>
    {{#ifAny (compare sectionFront 'news') (compare sectionFrontManual 'news')}}
      {{{ read 'components/stations-carousel/media/arrow_news.svg' }}}
    {{else}}
      {{{ read 'components/stations-carousel/media/arrow.svg' }}}
    {{/ifAny}}
  </div>
</div>
