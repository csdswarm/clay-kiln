<div data-uri="{{ default _ref _self }}" class="brightcove" data-editable="video">
  <div class="player-wrapper">
    {{#if videoId}}
      <div class="player {{#unless showTitle}}hide-title{{/unless}}">
        <video data-video-id="{{ videoId }}"
               data-account="{{ @root.locals.site.brightcoveAccountId }}"
               data-player="{{ @root.locals.site.brightcovePlayerId }}"
               data-embed="default"
               data-application-id
               class="video-js"
               controls></video>
        <script src="//players.brightcove.net/{{ @root.locals.site.brightcoveAccountId }}/{{ @root.locals.site.brightcovePlayerId }}_default/index.min.js"></script>
      </div>
    {{/if}}
  </div>
</div>
