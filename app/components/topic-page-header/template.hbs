<header
  data-uri="{{ default _ref _self }}"
  class="component component--topic-page-header topic-page-header--{{tag}} {{ if @root.locals.edit ' editing' }}"
  data-editable="settings">
  {{#if tag}}
    <div class="topic-page-header--banner{{if image '__image'}}">
      {{#if image}}
        <div class="image--container">
          <div class="image--container__gradient"></div>
          <img src="{{ image }}">
        </div>
      {{/if}}
      <h1>{{tag}}</h1>
    </div>
  {{/if}}
</header>
