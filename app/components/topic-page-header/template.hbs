<header
  data-uri="{{ default _ref _self }}"
  class="component component--topic-page-header topic-page-header--{{tag}}
    {{ if @root.locals.edit ' editing' }}
    {{ if image ' topic-page-header--image'}}
  "
  {{#if image}}
    style="background-image:url({{ image }});"
  {{/if}}
>
  <div class="topic-page-header__tag" data-editable="settings">
    <div class="tag__line"></div>
    <h1>{{tag}}</h1>
  </div>
</header>
