<section role="main" data-track-type="section" data-uri="{{ default _ref _self }}" class="component component--station-discover{{ if @root.locals.edit ' editing' }}">

  <select class="station-discover__dropdown--mobile">
    <option value="">Filter:</option>
    <option value="recent-stations">Recent</option>
    <option value="market-stations">{{station.city}} Stations</option>
    <option value="genre-stations">All {{station.genre}}</option>
  </select>

  <div id="discover__recent-stations" class="station-discover__stations-list stations-list--recent-stations">
    <h2>recent stations</h2>
    {{> stations-list recentStations }}
  </div>
  <div id="discover__market-stations" class="station-discover__stations-list stations-list--market-stations">
    <h2>{{station.city}} stations</h2>
    {{> stations-list marketStations }}
  </div>
  <div id="discover__genre-stations" class="station-discover__stations-list stations-list--genre-stations">
    <h2>all {{station.genre}}</h2>
    {{> stations-list genreStations }}
  </div>

</section>
