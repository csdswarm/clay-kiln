<div class="component component--thumb thumb">
  {{#if category}}
    <span class="thumb__{{ category }}">{{{ category }}}</span>
  {{/if}}
  {{#each contentTypes}}
    <span class="thumb__content-type thumb__content-type--{{ . }}">{{> graphic name=this _self=true }}</span>
  {{/each}}
  <img {{!-- TODO: consider making a helper for this sort of thing, e.g. {{{ imgSource images.0 }}} --}}
      src="{{ images.0.url }}?width={{images.0.width}}&crop={{images.0.crop}}{{#if images.0.offset}}
        ,offset-{{ images.0.offset }}{{/if}}"
      srcset="{{#each images}}
          {{ url }}?width={{ width }}&crop={{ crop }}{{ if offset (concat ',offset-' offset)}} {{ width }}w
          {{#unless @last}},{{/unless}}
        {{/each}}"
      sizes="{{#each images}}
          {{ if maxWidth (concat '(max-width:' maxWidth 'px)')}}{{ width }}px{{#unless @last }},{{/unless}}
        {{/each}}"
      class="thumb__image"/>
</div>