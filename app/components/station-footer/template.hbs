<div class="component component--station-footer" data-uri="{{ default _ref _self }}">
  <div class="station-footer__station">
    <div class="station__info">
      <span class="info__name">{{ station.name }}</span>
      <span class="info__slogan">{{ station.slogan }}</span>
    </div>
    <div class="station__social">
      {{#each socialButtons as |button|}}
        <a class="social__link" target="_blank" rel="nofollow" href="{{button.url}}">
          <object type="image/svg+xml" data="/media/components/station-footer/{{button.type}}.svg">
            <img src="/media/components/station-footer/{{button.type}}.svg">
          </object>
        </a>
      {{/each}}
    </div>

    {{#each footerLink as |link|}}
      <a class="station__link" href="{{ link.url }}">
        <span class="link__text" title="{{ link.url }}">{{ link.text }}</span>
      </a>
    {{/each}}
  </div>
</div>
