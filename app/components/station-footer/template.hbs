<div class="component component--station-footer" data-uri="{{ default _ref _self }}" style="height:200px; background-color: darkslategrey">
  <div class="">{{ station.name }} {{ station.slogan }}</div>

  <div class="">
    {{#each socialButtons as |button|}}
      <a target="_blank" href="{{button.url}}">
        <object type="image/svg+xml" data="/media/components/station-footer/{{button.type}}.svg">
          <img src="/media/components/station-footer/{{button.type}}.svg">
        </object>
      </a>
    {{/each}}
  </div>

  <ul class="">
    {{#each footerLink }}
      <li>
        <a href="{{ footerLink.url }}">
          <span class="" title="{{ footerLink.url }}">{{ footerLink.text }}</span>
        </a>
      </li>
    {{/each}}
  </ul>
</div>
