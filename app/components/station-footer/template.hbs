<div class="component component--station-footer" data-uri="{{ default _ref _self }}">
  <div class="station-footer">
    <div>
      <span class="station-footer__name">{{ station.name }}</span>
      <span class="station-footer__slogan">{{ station.slogan }}</span>
    </div>
    <div class="station-footer__social">
      {{#each socialButtons as |button|}}
        <a href="{{button.url}}" title="{{ button.url }}">
          <object type="image/svg+xml" data="/media/components/station-footer/{{ button.type }}.svg">
            <img src="/media/components/station-footer/{{ button.type }}.svg">
          </object>
        </a>
      {{/each}}
    </div>
    {{#if footerLinks}}
      <div>
        {{#each footerLinks as |link|}}
          <a class="station-footer__link" href="{{ link.url }}" title="{{ link.url }}">{{ link.text }}</a>
        {{/each}}
      </div>
    {{/if}}
    {{#ifAny @root.locals.edit copyright }}
      <div class="station-footer__copyright" data-editable="copyright" itemprop="copyright">{{copyright}}</div>
    {{/ifAny}}
  </div>
</div>
