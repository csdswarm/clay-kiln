{{#*inline "newsletterInput"}}
  <label class="newsletter-sign-up__form-input-label newsletter-sign-up__form-input-label--empty"
    {{#if label}}
      data-input-label="{{ label }}"
    {{/if}}
  >
    <input
      class="newsletter-sign-up__form-input {{ if modifier (concat 'newsletter-sign-up__form-input--' modifier) }}"
      {{#if type}}
        type="{{ type }}"
      {{/if}}
      {{#if size}}
        size="{{ size }}"
      {{/if}}
      {{#if name}}
        name="{{ name }}"
      {{/if}}
      {{#if placeholder}}
        placeholder="{{ placeholder }}"
      {{/if}}
      {{#if value}}
        value="{{ value }}"
      {{/if}}
      {{#if required}}
        required="required"
      {{/if}}
      {{#if pattern}}
        pattern="{{ pattern }}"
      {{/if}}
    />
    <div class="newsletter-sign-up__form-input-msg">this is a test</div>
  </label>
{{/inline}}

<div
  class="component component--newsletter-sign-up newsletter-sign-up newsletter-sign-up--{{ layoutType }}"
  data-uri="{{ default _ref _self }}"
  >
  <h3 class="newsletter-sign-up__title">
    <span class="newsletter-sign-up__title-text">{{ title }}</span>
  </h3>
  <form method="POST" class="newsletter-sign-up__form" action="" novalidate>
    <div class="newsletter-sign-up__form-group newsletter-sign-up__form-group--email">
      {{> newsletterInput
        type="email"
        name="email"
        modifier="email"
        label="Email"
        required=true
      }}
    </div>
    <div class="newsletter-sign-up__form-group newsletter-sign-up__form-group--zip">
      {{> newsletterInput
        type="text"
        name="zip"
        label="Postal Code"
        modifier="zip"
        required=true
      }}
    </div>
    <div class="newsletter-sign-up__form-group newsletter-sign-up__form-group--birthday">
      {{> newsletterInput
        type="text"
        name="birthday"
        label="Birthday - mm/dd/yyyy"
        modifier="birthday"
        required=true
      }}
    </div>
    <div class="newsletter-sign-up__form-group newsletter-sign-up__form-group--submit">
      {{> newsletterInput type="Submit" name="Subscribe" value="Submit" modifier="submit" }}
    </div>
    <input type="hidden" name="importTemplateID" value="#"/>
    <input type="hidden" name="redirectURL" value="/signup/thanks"/>
    <input type="hidden" name="siteID" value="5007DAAF-DC98-4D3C-B09A-326B787D57A0"/> <!--optional-->
  </form>
  <div class="newsletter-sign-up__sign-up-terms">
    <p>By signing up, I agree to the Terms of Use and acknowledge that I have read the <a href="">Privacy Policy</a>.</p>
  </div>
</div>