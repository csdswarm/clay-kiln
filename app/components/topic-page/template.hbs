<section role="main"
  data-track-type="section"
  data-uri="{{ default _ref _self }}"
  class="component component--topic-page topic-page--{{tag}}{{ if @root.locals.edit ' editing' }}"
  data-station-slug="{{ stationSlug }}">

  {{#if content}}
      <div data-editable="content" itemprop="topicBody">
        {{> component-list content }}
      </div>
  {{/if}}
  {{> two-column-component twoColumnComponent }}
</section>
