{{#*inline "eventLeadCard" }}
  <h1 style="margin-bottom:1em; padding:2em; border-bottom: 1px dashed #ccc; color: #bbb">replace with lead component</h1>
{{/inline}}

{{#*inline "eventCard" }}
  <div class="component-event-card event-card">
    <div class="event-card__img-container">
      <img class="event-card__img-thumb" src="{{ feedImgUrl }}" alt="{{ venueName }}">
    </div>
    <div class="event-card__info-container">
      <div class="event-card__info-headline">{{ headline }}</div>
      <div class="event-card__info-dateTime">
        <div class="event-card__info-icon event-card__info-icon--date"></div>
        <div>{{ dateTime }}</div>
      </div>
      <div class="event-card__info-venueName">
        <div class="event-card__info-icon event-card__info-icon--location"></div>
        <div>{{ venueName }}</div>
      </div>
    </div>
  </div>
{{/inline}}


<div class="component-events-list events-list">
  {{#each _computed.events as |event|}}
    {{#if (compare @index 0) }}
      {{> eventLeadCard event }}
    {{else}}
      {{> eventCard event }}
    {{/if}}
  {{/each}}
</div>