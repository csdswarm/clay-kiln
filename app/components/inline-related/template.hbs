<section class="component component--related {{#if articleType}}component--{{articleType}}{{/if}}" data-uri="{{ default _ref _self }}" data-track-type="inline-related" data-editable="inlineRelatedItems">
  <h2 class="related__title">Related</h2>
  {{#ifAny articles.length @root.locals.edit}}
        <div class="related__item related__item--image">
          <a href="{{ articles.0.canonicalUrl }}"
             class="related-item__link"
             data-track-type="article-link"
             data-track-component-name="related"
             data-track-page-uri="{{ articles.0.pageUri }}"
             data-track-headline="{{ articles.0.primaryHeadline }}"
             data-track-component-title="Related">
              <img src="{{ articles.0.feedImgUrl }}"/>
          </a>
        </div>
        <div class="related__item">
          <a href="{{ articles.0.canonicalUrl }}"
             class="related__link related-link--main"
             data-track-type="article-link"
             data-track-component-name="related"
             data-track-page-uri="{{ articles.0.pageUri }}"
             data-track-headline="{{ articles.0.primaryHeadline }}"
             data-track-component-title="Related">
            <span class="related__headline">{{{ articles.0.primaryHeadline }}}</span>
          </a>
          {{#if (compare articles.length 2) }}
            <a href="{{ articles.1.canonicalUrl }}"
               class="related__link related-link--secondary"
               data-track-type="article-link"
               data-track-component-name="related"
               data-track-page-uri="{{ articles.1.pageUri }}"
               data-track-headline="{{ articles.1.primaryHeadline }}"
               data-track-component-title="Related">
              <span class="related__bullet"></span>
              <span class="related__headline">{{{ articles.1.primaryHeadline }}}</span>
            </a>
          {{/if}}
        </div>
    </div>
  {{/ifAny}}
</section>
