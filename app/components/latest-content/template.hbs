<section class="component component--latest-content" data-uri="{{ default _ref _self }}" data-track-type="latest-content"
  data-editable="latestContentItems">
  <div class="latest-content__title-line"></div>
  <h2 class="latest-content__title">LATEST from <span class="title">RADIO.COM</span></h2>
  <ul class="latest-content__links">
    {{#each entertainmentItems as |article|}}
    <li class="component--{{articleType}}">
      <a href="{{ article.canonicalUrl }}" data-track-type="article-link" data-track-component-name="latest-content"
        data-track-page-uri="{{ article.pageUri }}" data-track-headline="{{ article.primaryHeadline }}"
        data-track-component-title="Latest Content">
        <div class="link__thumb" style="background-image:url({{ article.feedImgUrl }});"></div>
        <span class="link__headline">{{{ article.primaryHeadline }}}</span>
      </a>
    </li>
    {{/each}}
    {{#each sportsItems as |article|}}
    <li class="component--{{articleType}}">
      <a href="{{ article.canonicalUrl }}" data-track-type="article-link" data-track-component-name="latest-content"
        data-track-page-uri="{{ article.pageUri }}" data-track-headline="{{ article.primaryHeadline }}"
        data-track-component-title="Latest Content">
        <div class="link__thumb" style="background-image:url({{ article.feedImgUrl }});"></div>
        <span class="link__headline">{{{ article.primaryHeadline }}}</span>
      </a>
    </li>
    {{/each}}
    {{#each newsItems as |article|}}
    <li class="component--{{articleType}}">
      <a href="{{ article.canonicalUrl }}" data-track-type="article-link" data-track-component-name="latest-content"
        data-track-page-uri="{{ article.pageUri }}" data-track-headline="{{ article.primaryHeadline }}"
        data-track-component-title="Latest Content">
        <div class="link__thumb" style="background-image:url({{ article.feedImgUrl }});"></div>
        <span class="link__headline">{{{ article.primaryHeadline }}}</span>
      </a>
    </li>
    {{/each}}
  </ul>
</section>