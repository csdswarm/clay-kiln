<section class="component component--latest-content" data-uri="{{ default _ref _self }}" data-track-type="latest-content">
  <h2 class="latest-content__title"><span>LATEST on RADIO.COM</span></h2>
  <div class="latest-content__section">
    {{#each articles as |articleSection|}}
      <div
        class="section__container section__container--{{articleSection.section}}"
        data-editable="{{articleSection.section}}Items"
      >
        {{! only show edit placeholder in edit mode}}
        {{#if @root.locals.edit}}
          <div class="kiln-placeholder latest-content__add-article-button">
            <div class="placeholder-label">
              <span class="ui-icon placeholder-icon material-icons add">add</span>
              <span class="placeholder-text">{{articleSection.section}} articles</span>
            </div>
          </div>
        {{/if}}

        <ul class="container__article-list">
          {{#each articleSection.articles as |article|}}
            <li>
              <a href="{{ article.canonicalUrl }}"
                 class="articleList__link {{#unless @first}}articleList__link--subsequent{{/unless}}"
                 data-track-type="article-link"
                 data-track-component-name="latest-content"
                 data-track-page-uri="{{ article.pageUri }}"
                 data-track-headline="{{ article.primaryHeadline }}"
                 data-track-component-title="Latest Content">
                {{#if @first}}
                  <img
                    src="{{ article.feedImgUrl }}?width=300&crop=16:9,offset-y0"
                    srcset="{{ article.feedImgUrl }}?width=300&crop=16:9,offset-y0 300w,
                  {{ article.feedImgUrl }}?width=320&crop=16:9,offset-y0 320w,
                  {{ article.feedImgUrl }}?width=343&crop=16:9,offset-y0 343w,
                  {{ article.feedImgUrl }}?width=440&crop=16:9,offset-y0 440w"
                    sizes="(max-width: 360px) 320px, (max-width: 480px) 440px, (max-width: 1023px) 343px, 300px"
                    class="link__image" />
                  <div class="link__tag link__tag--{{articleSection.section}}">{{ articleSection.section }}</div>
                {{else}}
                  <picture class="link__picture">
                    <source media="(min-width: 1024px)" srcset="{{ article.feedImgUrl }}?width=80&crop=1:1,offset-y0" />
                    <source media="(max-width: 1023px)" srcset="{{ article.feedImgUrl }}?width=343&crop=16:9,offset-y0" />
                    <source media="(max-width: 480px)" srcset="{{ article.feedImgUrl }}?width=440&crop=16:9,offset-y0" />
                    <source media="(max-width: 360px)" srcset="{{ article.feedImgUrl }}?width=320&crop=16:9,offset-y0" />
                    <img src="{{ article.feedImgUrl }}?width=80&crop=1:1,offset-y0"
                       class="picture__image" />
                  </picture>
                {{/if}}
                <div class="link__label">{{ article.primaryHeadline }}</div>
              </a>
            </li>
          {{/each}}
        </ul>
      </div>
    {{/each}}
  </div>
</section>
