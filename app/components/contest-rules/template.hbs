{{#*inline "contestRulesDate"}}
  {{ formatDateTimeRange
      startDateTime
      endDateTime
      (concat "MMMM D, YYYY [at] h:mma [" stationTimeZone "]")
      ' through ' }}
{{/inline}}

{{#*inline "contestLink"}}
  <a href="/contests/{{ slug }}">{{ text }}</a>
{{/inline}}

{{#*inline "rulesBody"}}
  <div
    class="
    {{#if includeTitle}}
      contest-rules__rules-body-with-title
    {{/if}}
      paragraph
    "
    data-editable="rulesBodyText"
  >
    {{{ rulesBodyText }}}
  </div>
{{/inline}}

{{#*inline "defaultStyle"}}
  {{#if showHeader}}
    <div class="contest-rules--default-view">
      <h2 class="contest-rules__contest-headline">
        {{> contestLink slug=slug text=headline }}
      </h2>
      <div class="contest-rules__date-range">
        <p class="paragraph">
          Contest Date Range: {{> contestRulesDate }}
        </p>
      </div>
    </div>
  {{/if}}
  {{> rulesBody includeTitle=true }}
{{/inline}}

{{#*inline "presentationStyle"}}
  <div class="contest-rules--presentation-view">
    <div class="contest-rules__image-container">
      <img
        class="contest-rules__image"
        src="{{ feedImgUrl }}"
        alt="contest image"
      />
    </div>
    <div class="contest-rules__description-container">
      <h2 class="contest-rules__contest-headline">
        {{> contestLink slug=slug text=headline }}
      </h2>
      <p class="paragraph">{{ paragraphForMarketing }}</p>
      {{> contestLink slug=slug text="read more" }}
    </div>
  </div>
{{/inline}}

<div class="component--contest-rules">
  {{#if showPresentation}}
    {{> presentationStyle}}
  {{else}}
    {{> defaultStyle}}
  {{/if}}
</div>
