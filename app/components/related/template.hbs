<aside class="related" data-uri="{{ default _ref _self }}" data-track-type="article-list">
  <h2 class="related-title" data-editable="title">{{ title }}</h2>
  {{#ifAny items.length @root.locals.edit}}
    <ul class="related-links" data-editable="relatedItems">
      {{#each items}}
        <li class="related-link">
          <a href="{{ url }}"
            data-track-type="article-link"
            data-track-component-name="related"
            data-track-page-uri="{{ pageUri }}"
            data-track-headline="{{ plaintextHeadline }}"
            data-track-component-title="{{ ../title }}">
            <span class="headline">{{{ title }}}</span>
          </a>
        </li>
      {{/each}}
    </ul>
  {{/ifAny}}
</aside>
