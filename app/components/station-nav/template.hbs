<div class="component component--station-nav" data-uri="{{ default _ref _self }}">
  <div class="station-nav__menu">
    <div class="menu__mobile-toggle">
        <button class="mobile-toggle--closed">
          {{{ read 'components/station-nav/media/chevron_down.svg' }}}
        </button>
        <button class="mobile-toggle--open">
          {{{ read 'components/station-nav/media/chevron_up.svg' }}}
        </button>
    </div>
    <img class="menu__image" src="{{ station.square_logo_small }}?width=100&height=100&crop=1:1">
    {{#if primaryLinks.length }}
      <ul class="menu__navigation">
        {{#each primaryLinks }}
          <li class="navigation__primary primary--label-{{ text }} {{ if current 'primary--current' }} {{ if drawer 'primary--drawer-enabled' }}">
            {{#if url }}
              <a href="{{ url }}">
                <button>
                  <span>{{ text }}</span>
                </button>
              </a>
            {{ else }}
              <button>
                <span>{{ text }}</span>
              </button>
            {{/if }}
          </li>
        {{/each }}
      </ul>
    {{/if }}
    <div class="menu__listen">
      <button class="listen__button" data-station-id="{{ station.id }}">
        <div class="button__icon {{ playingClass }}"></div>
        <div class="button__text">listen</div>
      </button>
    </div>
    <div class="menu__carat"></div>
  </div>
  <div class="station_nav__drawers">
    {{#each primaryLinks }}
      {{#ifAll drawer secondaryLinks.length }}
        <ul class="drawers__drawer drawer--desktop drawer--{{ text }}">
          {{#each secondaryLinks }}
            <li class="drawer__item item--{{ text }}">
              <a href="{{ url }}">
                <span>{{ text }}</span>
              </a>
            </li>
          {{/each }}
        </ul>
      {{/ifAll }}
    {{/each }}
     
    {{#if primaryLinks.length }}
      <ul class="drawers__drawer drawer--mobile">
        {{#each primaryLinks }}
          <li class="drawer__item item--{{ text }}">
            <div class="item__label">
              <a href="{{ url }}">
                <button>
                  <span>{{ text }}</span>
                </button>
              </a>
              {{#ifAll drawer secondaryLinks.length }}
              <div class="label__menu-toggle">
                <button class="menu-toggle--closed">
                  {{{ read 'components/station-nav/media/chevron_down.svg' }}}
                </button>
                <button class="menu-toggle--open">
                  {{{ read 'components/station-nav/media/chevron_up.svg' }}}
                </button>
              </div>
              {{/ifAll }}
            </div>
            {{#if secondaryLinks.length }}
              <ul>
                {{#each secondaryLinks }}
                  <li>
                    <a href="{{ url }}">
                      <button>
                        <span>{{ text }}</span>
                      </button>
                    </a>
                  </li>
                {{/each }}
              </ul>
            {{/if }}
          </li>
        {{/each }}
      </ul>
    {{/if }}
  </div>
</div>
