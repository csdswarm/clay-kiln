<section data-uri="{{ default _ref _self }}" class="component component--section-lead{{ if @root.locals.edit ' editing' }} section-lead--{{default @root.locals.sectionFront 'homepage'}}">
  <div class="section-lead__articles" data-editable="items">
    {{#if articles.length}}
      {{#each articles as |article|}}
        <div class="section-lead__article {{#unless @index}}section-lead__article--first{{/unless}}">
          <a href="{{ article.canonicalUrl }}" class="section-lead__link">
            {{#if @index}}
              <picture class="section-lead__image">
                <source media="(max-width: 480px)" srcset="{{ feedImgUrl }}?width=440&crop=16:9,offset-y0" />
                <source media="(max-width: 1023px)" srcset="{{ feedImgUrl }}?width=343&crop=16:9,offset-y0" />
                <source media="(max-width: 1279px)" srcset="{{ feedImgUrl }}?width=140&crop=140:121,offset-y0" />
                <source media="(min-width: 1280px)" srcset="{{ feedImgUrl }}?width=220&crop=16:9,offset-y0" />
                <img src="{{ feedImgUrl }}?width=220&crop=16:9,offset-y0" />
                <div class="image__hover-overlay"></div>
              </picture>
            {{else}}
              <picture>
                <source media="(max-width: 480px)" srcset="{{ feedImgUrl }}?width=480&crop=16:9,offset-y0" />
                <source media="(max-width: 1023px)" srcset="{{ feedImgUrl }}?width=1023&crop=16:9,offset-y0" />
                <source media="(max-width: 1279px)" srcset="{{ feedImgUrl }}?width=620&crop=620:439,offset-y0" />
                <source media="(min-width: 1280px)" srcset="{{ feedImgUrl }}?width=780&crop=16:9,offset-y0" />
                <img
                  src="{{ feedImgUrl }}?width=780&crop=16:9,offset-y0"
                  class="section-lead__image" />
                <div class="image__hover-overlay"></div>
              </picture>
            {{/if}}
            <div class="section-lead__details">
              {{#unless @index}}
                <span class="details__primary-story-label">{{ default ../primaryStoryLabel article.sectionFront }}</span>
              {{/unless}}
              <h3 class="details__title">{{ article.primaryHeadline }}</h3>
            </div>
          </a>
        </div>
      {{/each}}
    {{else}}
      {{#if @root.locals.edit}}
        <div class="kiln-placeholder">
          <div class="placeholder-label">
            <span class="ui-icon placeholder-icon material-icons add">add</span> <span class="placeholder-text">Lede Story(s)</span> <div class="ui-ripple-ink"></div>
          </div>
        </div>
      {{/if}}
    {{/if}}
  </div>
  {{> google-ad-manager googleAdRightRail}}
</section>
