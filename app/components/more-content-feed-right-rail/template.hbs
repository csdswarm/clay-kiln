<div class="component component--more-content-feed-right-rail more-content-feed__right-ad--desktop" data-uri="{{ default _ref _self }}">
  {{#ifAny (compare locationOfRightRail 'topic-page') (compare locationOfRightRail 'author-page')}}
    {{> google-ad-manager contentCollectionLogoSponsorship}}
  {{/ifAny}}
  {{#if @root.locals.edit}}
    {{#unless dynamicTagPage}}
      <aside class="blurb" data-editable="tagInfo">{{ tagInfo }}</aside>
    {{/unless}}
  {{else}}
    {{#ifAll tagInfo (compare dynamicTagPage false)}}
      <aside class="blurb">{{ tagInfo }}</aside>
    {{/ifAll}}
  {{/if}}
  {{> google-ad-manager googleAdRightRail}}
</div>