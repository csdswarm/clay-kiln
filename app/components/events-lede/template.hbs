<section data-uri="{{ default _ref _self }}" data-editable="settings" class="component component--events-lede{{ if @root.locals.edit ' editing' }}">
  <div class="events-lede__featured">
    {{#if url }}
      <div class="events-lede__image-container">
        <a href="{{ url }}">
          <picture>
            <source media="(max-width: 480px)" srcset="{{ feedImgUrl }}?width=480&crop=16:9,offset-y0" />
            <source media="(max-width: 1023px)" srcset="{{ feedImgUrl }}?width=1023&crop=16:9,offset-y0" />
            <source media="(max-width: 1279px)" srcset="{{ feedImgUrl }}?width=620&crop=620:439,offset-y0" />
            <source media="(min-width: 1280px)" srcset="{{ feedImgUrl }}?width=780&crop=16:9,offset-y0" />
            <img
              src="{{ feedImgUrl }}?width=780&crop=16:9,offset-y0"
              class="section-lead__image"
            />
          </picture>
          <div class="events-lede__image-overlay">
            {{#if contentLabel }}
              <span class="events-lede__content-label">{{ contentLabel }}</span>
            {{/if}}
            <h3 class="events-lede__title">{{ headline }}</h3>
          </div>
        </a>
      </div>
      <div class="events-lede__info-container">
        <span>
          {{{ read 'components/events-lede/media/clock.svg' }}}
          {{ _computed.dateTime }}
        </span>
        <span>
          <a href="{{ _computed.addressLink }}">
            {{{ read 'components/events-lede/media/pin.svg' }}}
            {{{ venueName }}}
          </a>
        </span>
        {{> paragraph description }}
      </div>
    {{/if}}
  </div>
  {{> google-ad-manager googleAdRightRail }}
</section>
